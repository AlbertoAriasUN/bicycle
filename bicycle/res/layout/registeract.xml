<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  
    android:scrollbars="none"
    tools:context=".MainActivity" 
    android:background="@color/background">
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <EditText
        android:id="@+id/RegisterAct_Username"
        android:background="@drawable/bg_edittext_normal"
        android:layout_marginTop="60dp"
        android:layout_width="250dp"
	    android:layout_height="35dp"
	    android:layout_gravity="center_horizontal"
	    android:hint="请输入用户名"
	    android:textColorHint="@color/lineL" />
   		<View    
        android:layout_height="1px"   
        android:background="@color/lineL"   
        android:layout_width="250dp" />
		<TextView 
		android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:textColor="@color/lineL"
        android:text="*长度4-8位，字符可为0-9，a-z，A-Z" />  
    
   		<EditText
        android:id="@+id/RegisterAct_Password"
        android:inputType="textPassword"
        android:background="@drawable/bg_edittext_normal"
        android:layout_marginTop="40dp"
        android:layout_width="250dp"
	    android:layout_height="35dp"
	    android:layout_gravity="center_horizontal"
	    android:hint="请输入密码"
	    android:textColorHint="@color/lineL" />
  		<View
        android:layout_height="1px"   
        android:background="@color/lineL"   
        android:layout_width="250dp" />
		<TextView 
		android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:textColor="@color/lineL"
        android:text="*长度4-8位，字符可为0-9，a-z，A-Z" /> 
        
		<TableRow 
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
		    <TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="性 别："
		    android:textSize="19sp"
		    android:textColor="@color/lineL" />
 			<RadioGroup 
 			    android:id="@+id/radioGroup" 
 			    android:contentDescription="性别" 
 			    android:layout_width="wrap_content" 
 			    android:layout_height="wrap_content"
 			    android:orientation="horizontal">
   			 <RadioButton 
   			     android:layout_width="wrap_content" 
   			     android:layout_height="wrap_content" 
   			     android:id="@+id/radioMale" 
   			     android:text="男" 
   			     android:textColor="@color/lineL"
   			     android:layout_marginLeft="15dp"
   			     android:checked="true">   			     
   			 </RadioButton>
    		 <RadioButton 
    		     android:layout_width="wrap_content" 
    		     android:layout_height="wrap_content" 
    		     android:id="@+id/radioFemale" 
    		     android:text="女"
    		     android:textColor="@color/lineL"
    		     android:layout_marginLeft="15dp">    		     
    		 </RadioButton>    
 			</RadioGroup>
		</TableRow>
		
		<EditText
        android:id="@+id/RegisterAct_Phone"
        android:inputType="phone"
        android:background="@drawable/bg_edittext_normal"
        android:layout_marginTop="40dp"
        android:layout_width="250dp"
	    android:layout_height="35dp"
	    android:layout_gravity="center_horizontal"
	    android:hint="请输入联系方式"
	    android:textColorHint="@color/lineL"/>
  		<View    
        android:layout_height="1px"   
        android:background="@color/lineL"   
        android:layout_width="250dp" />
  		<TextView
  		    android:layout_width="250dp"
  		    android:layout_height="wrap_content"
  		    android:paddingLeft="12dp"
  		    android:text="*手机号码或者短号"
  		    android:textColor="@color/lineL" />
        
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="60dp">   
	             
	        <Button 
		     android:background="@color/textL_BG"
		     android:textColor="@color/textL"	   
		     android:layout_gravity="left"	   
		     android:text="登 录"
		     android:textSize="19sp"
		     android:layout_width="125dp"
		     android:layout_height="35dp"
		     android:id="@+id/RegisterAct_Login"
	     />
	     
	      <Button 
		     android:background="@color/textD_BG"
		     android:textColor="@color/textD"
		     android:layout_gravity="right"	
		     android:layout_marginLeft="20dp" 
		     android:text="注 册"
		     android:textSize="19sp"
		     android:layout_width="125dp"
		     android:layout_height="35dp"
		     android:id="@+id/RegisterAct_Register"
	     />
	    </LinearLayout>
    </LinearLayout>
</ScrollView>