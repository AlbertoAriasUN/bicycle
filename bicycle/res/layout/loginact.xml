<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="80dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"    
    android:background="@color/background">
    
    <EditText
         android:id="@+id/LoginAct_Username"
         android:background="@drawable/bg_edittext_normal"
         android:layout_marginTop="130dp"
         android:layout_width="250dp"
	     android:layout_height="35dp"
	     android:layout_gravity="center_horizontal"
	     android:hint="请输入用户名"
	     android:textColorHint="@color/lineL"
        />
    <View    
        android:layout_height="1px"   
        android:background="@color/lineL"   
        android:layout_width="250dp">  
	</View>  
    
    <EditText
         android:id="@+id/LoginAct_Password"
         android:background="@drawable/bg_edittext_normal"
         android:layout_marginTop="50dp"
         android:layout_width="250dp"
	     android:layout_height="35dp"
	     android:padding="5dp"
	     android:layout_gravity="center_horizontal"
	     android:hint="请输入密码"
	     android:textColorHint="@color/lineL"
		 android:password="true"
        />
    <View    
        android:layout_height="1px"   
        android:background="@color/lineL"   
        android:layout_width="250dp">  
	</View>  
    
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp">   
             
        <Button 
	     android:background="@color/textD_BG"
	     android:textColor="@color/textD"	   
	     android:layout_gravity="left"	   
	     android:text="登 录"
	     android:textSize="19sp"
	     android:layout_width="125dp"
	     android:layout_height="35dp"
	     android:id="@+id/LoginAct_Login"
     />
     
      <Button 
	     android:background="@color/textL_BG"
	     android:textColor="@color/textL"
	     android:layout_gravity="right"	
	     android:layout_marginLeft="20dp" 
	     android:text="注 册"
	     android:textSize="19sp"
	     android:layout_width="125dp"
	     android:layout_height="35dp"
	     android:id="@+id/LoginAct_Register"
     />
    </LinearLayout>
    
    

    
</LinearLayout>